<!doctype html>
<html>

<head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css"
        integrity="sha384-VCmXjywReHh4PwowAiWNagnWcLhlEJLA5buUprzK8rxFgeH0kww/aWY76TfkUoSX" crossorigin="anonymous">
    <style>
        .radio-wrapper {
            display: flex;
            align-items: center;
            margin-top: 15px;
            gap: 10px;
        }
        .radio-label-left, .radio-label-right {
            font-size: 14px;
            white-space: nowrap;
        }
        .radio-label-left {
            margin-left: 50px;
            margin-right: 10px;
            font-weight: bold;
        }
        .radio-label-right {
            margin-left: 10px;
            margin-right: 50px;
            font-weight: bold;
        }
        .radio-horizontal {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 15px;
            flex: 1;
        }
        .radio-option {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
        }
        .radio-option input[type="radio"] {
            margin-bottom: 8px;
            cursor: pointer;
            width: 15px;
            height: 15px;
            transform: scale(1.5);
        }
        .radio-option label {
            display: none;
        }
        .radio-number {
            font-size: 14px;
            font-weight: bold;
            margin-top: 5px;
        }
        .card-body p audio {
            width: 100%;
            max-width: 600px;
        }
        .audio-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-bottom: 20px;
        }
        .audio-container > div {
            display: flex;
            flex-direction: column;
        }
        .audio-container p {
            margin: 0;
        }
        .audio-container audio {
            width: 100%;
            max-width: 600px;
        }
    </style>
</head>

<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            {% block heading %}{% endblock %}
        </div>
    </div>

    <div class="container" id="form_container" style="padding-bottom: 60px;">
        <form id="theForm">
            <div class="form-group">
                <label for="name">이름:</label>
                <input class="form-control" type="text" inputmode="text" name="name" placeholder="이름을 적어주세요." required>
                <small class="form-text text-muted">Required*</small>
            </div>
            {% block form_questions %}{% endblock %}
            <input type="text" name="thank" value="참여해주셔서 감사합니다!" hidden>
            <input class="btn btn-info btn-lg" type="submit" value=" 제출 " id="submitBtn">
            <p class="text-muted">
                <small>모든 문항에 응답했는지 다시 한 번 확인해주세요. 감사합니다.</small>
            </p>
            <div id="submitMessage" style="display:none; margin-top: 20px;"></div>
        </form>
</div>

<script>
        (function() {
            const formUrl = "{{ form_url }}";
            let isSubmitting = false;
            
            document.getElementById('theForm').addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent default form submission
                
                if (isSubmitting) {
                    return false; // Prevent multiple submissions
                }
                
                const submitBtn = document.getElementById('submitBtn');
                const submitMessage = document.getElementById('submitMessage');
                
                // Validate form
                if (!this.checkValidity()) {
                    this.reportValidity();
                    return false;
                }
                
                // Check if all questions are answered
                const questions = document.querySelectorAll('.question');
                let allAnswered = true;
                questions.forEach(function(question) {
                    const radioButtons = question.querySelectorAll('input[type="radio"]');
                    const checked = question.querySelector('input[type="radio"]:checked');
                    if (!checked && radioButtons.length > 0) {
                        allAnswered = false;
                    }
                });
                
                if (!allAnswered) {
                    submitMessage.innerHTML = '<div class="alert alert-warning" role="alert">' +
                        '<strong>모든 문항에 응답해주세요.</strong>' +
                        '</div>';
                    submitMessage.style.display = 'block';
                    submitMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    return false;
                }
                
                // Mark as submitting
                isSubmitting = true;
                submitBtn.disabled = true;
                submitBtn.value = 'Submitting...';
                submitMessage.style.display = 'none';
                
                // Collect form data
                const formData = new FormData(this);
                const params = new URLSearchParams();
                
                // Convert FormData to URL parameters
                for (const [key, value] of formData.entries()) {
                    if (value) { // Only add non-empty values
                        params.append(key, value);
                    }
                }
                
                // Create the full URL
                const fullUrl = formUrl + '?' + params.toString();
                
                // Submit by redirecting (this is the most reliable way for Google Apps Script)
                // The Google Apps Script will return an HTML page with thank you message
                window.location.href = fullUrl;
                
                // Note: The page will redirect to Google Apps Script's response
                // If you want to stay on the page, you would need to use a different approach
                // But redirecting is the standard way for Google Apps Script GET requests
                
                return false;
            });
        })();
    </script>
</body>

</html>